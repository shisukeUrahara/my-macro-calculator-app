{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "rules": {
    "no-console": ["warn", { "allow": ["error"] }],
    "no-debugger": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    {
      "files": ["tests/**/*", "**/*.test.ts", "**/*.test.tsx", "cli/**/*"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": [
    "dist",
    "build",
    ".output",
    "node_modules",
    "*.config.js",
    "*.config.ts",
    ".tanstack",
    "routeTree.gen.ts"
  ]
}
