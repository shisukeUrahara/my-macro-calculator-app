{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "name": "dev-server",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}",
      "env": { "NODE_OPTIONS": "--enable-source-maps" }
    },
    {
      "name": "client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    }
  ]
}
